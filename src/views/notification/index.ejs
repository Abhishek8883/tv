<%- include('../partials/header') -%>
<% var base_url = process.env.base_url %>

<div class="wrapper">

  <%- include('../partials/nav') -%>
  <%- include('../partials/sidebar') -%>

  <div class="content-wrapper" style="min-height: 646px;">

    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Notification</h1>
          </div>
        </div>
      </div>

      <div class="container-fluid">
        <div class="row mb-3">
          <a href="<%=base_url%>/admin/notification/createpage">
            <button class="btn btn-primary ml-2"><i class="fa-solid fa-plus"></i> Create
              Notification</button></a>
        </div>
      </div>

      <div class="container-fluid">

        <%if(allNotifications.length>0){ %>
        
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Recent Notifications</h3>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                      <tr>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Created At</th>
                        <th>Tags</th>
                      </tr>
                  </thead>
                  <tbody>

                    <%allNotifications.forEach((val) => { %>
                      <tr>
                        <td><%=val.title%></td>
                        <td><%=val.content%></td>
                        <td><%= val.createdAt.toUTCString()%></td>
                        <td>
                        <% val.notification_tags.forEach(dets => { %>
                          <button class="btn btn-info btn-sm"><%= dets.tagname%></button>
                       <% })%>
                      </td>
                      </tr>
                   <% }) %> 
                     
                  </tbody>
                </table>
              </div>

            </div>

          </div>
        </div>

        <% }else{ %>
          <div class="row">
            <h2>No Notifications</h2>
          </div>
        <% } %>
      </div>

    </div>




  </div>


  <aside class="control-sidebar control-sidebar-dark" style="display: none;">
  </aside>
</div>



<%- include('../partials/footer') -%>